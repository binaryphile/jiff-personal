#!/usr/bin/env bash
# Usage: jiff task-add

source "${_JIFF_ROOT}/../../binaryphile/jiff-core/libexec/jiff-task-add"

set_taskdir () {
  case "${1}" in
    "role" )
      echo "../role/current"
      ;;
    "default" )
      echo ""
      ;;
    "core" )
      echo "../../../binaryphile/jiff-core/libexec"
      ;;
    * )
      echo "${_JIFF_ROOT}/context/current"
  esac
}

return 0 2>/dev/null || true
strict_mode on
main "${@}"
cd "${_JIFF_ROOT}"
git add "libexec/jiff-${2}"
