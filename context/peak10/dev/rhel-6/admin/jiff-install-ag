#!/usr/bin/env bash
# Usage: jiff install-ag

source stdlib

declare -r RepoUri="bertrand:tmp"
declare -r Filename="ag-static-att.tar.gz"

main () {
  exit_if_is_on_path "ag"
  install_ag
}

install_ag () {
  mkdir -p "${HOME}/tmp"
  cd "${HOME}/tmp"
  scp "${RepoUri}/${Filename}" .
  # TODO: actually install ag
  # tar xzf "${Filename}"
  # rm "${Filename}"
}

return 0 2>/dev/null || :
strict_mode on
main "${@}"
